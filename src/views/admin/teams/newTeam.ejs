<%- include("../../partials/head.ejs",{title:"Admin - Torneo"}) %>
    <div class="contenedorAdmin">    
        <%- include("../../partials/menuAdmin.ejs")  %> 
        <div class="contAdminPrin">
            <h3>Crear un nuevo equipo</h3>
            <div class="teamCreateContADM">         
                <div>
                    <form class="newTournament formNewTeam" action="/admin/teams/new" method="post" enctype="multipart/form-data">
                        <fieldset>
                            <legend>Completar información del equipo</legend>
                            <label class="newTournamentLabel">
                                Nombre:
                                <input <% if(locals.errors && locals.errors.name) { %> class="errFormInput nameTeamCreated" <% }else{ %> class="nameTeamCreated" <% } %>   maxlength="16" value="<%= locals.oldData ? locals.oldData.name:null %>" placeholder="Ingrese un nombre" name="name" type="text">
                                <p class="errForm errName">
                                    <% if (locals.errors && locals.errors.name) { %>
                                        <%= locals.errors.name.msg %>
                                    <% } %>
                                </p>
                            </label>
                            <label class="newTournamentLabel">
                                Escudo:
                                <input <% if(locals.errors && locals.errors.img) { %> class="errFormInput fileTeamCreated" <% }else{ %> class="fileTeamCreated" <% } %> accept=".jpg,.png,jpeg" name="img" type="file">
                                <p class="errForm errFile">
                                    <% if (locals.errors && locals.errors.img) { %>
                                        <%= locals.errors.img.msg %>
                                    <% } %>
                                </p>
                            </label>
                            <label class="newTournamentLabel">
                                Torneo:
                                <select <% if(locals.errors && locals.errors.tournamentId) { %> class="errFormInput tournamentIdTeamCreate" <% }else{ %> class="tournamentIdTeamCreate" <% } %> id="selectTournament" name="tournamentId">
                                    <% for( let i = 0; i < consultTournament.length; i++ ) { %>
                                        <option value="<%= consultTournament[i].id  %>"><%= consultTournament[i].name  %></option>
                                    <% } %>
                                </select>
                                <p class="errForm errTournament">
                                    <% if (locals.errors && locals.errors.tournamentId) { %>
                                        <%= locals.errors.tournamentId.msg %>
                                    <% } %>
                                </p>
                            </label>
                            <label class="newTournamentLabel">
                                División:
                                <select name="divisionId" <% if(locals.errors && locals.errors.divisionId) { %> class="errFormInput divisionIdTeamCreate divisionSelect" <% }else{ %> class="divisionIdTeamCreate divisionSelect" <% } %>>
                                    <% for( let i = 0; i < consultDivision.length; i++ ) { %>
                                        <option value="<%= consultDivision[i].id  %>"><%= consultDivision[i].name  %></option>
                                    <% } %>
                                </select>
                                <p class="errForm errDivision">
                                    <% if (locals.errors && locals.errors.divisionId) { %>
                                        <%= locals.errors.divisionId.msg %>
                                    <% } %>
                                </p>
                            </label>
                            <input class="formSubmitTournament btnLink" value="Crear equipo" type="submit" />
                        </fieldset>
                    </form>
                </div>
                <div>
                    <div class="teamCardContCreate">
                        <div class="teamCardCreateAvatar templateCreateTeamAvatar">
                            <img src="/img/teams/default.png" alt="avatar">
                        </div>
                        <div class="templateCreateTeamName">Nombre:</div>
                        <div class="templateCreateTeamCap">Capitan: Null</div>
                        <div class="templateCreateTeamTour">Torneo: <%= consultTournament[0].name %></div>
                        <div class="templateCreateTeamDiv">División: <%= consultDivision[0].name %> </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="/js/mainAdmin.js"></script>