<%- include("../../partials/head.ejs",{title:"Admin - Torneo"}) %>
    <div class="contenedorAdmin">    
        <%- include("../../partials/menuAdmin.ejs")  %> 
        <div class="contAdminPrin">
            <h3>Crear un nuevo equipo</h3>
            <div class="teamCreateContADM">         
                <div>
                    <form class="newTournament" action="/admin/tournament/new" method="post">
                        <fieldset>
                            <legend>Completar información del equipo</legend>
                            <label class="newTournamentLabel">
                                Nombre:
                                <input class="nameTeamCreated" maxlength="16" value="<%= locals.oldData ? locals.oldData.name:null %>" placeholder="Ingrese un nombre" name="name" type="text">
                                <% if (locals.errors && locals.errors.name) { %>
                                    <p class="errForm"><%= locals.errors.name.msg %></p>
                                <% } %>
                            </label>
                            <label class="newTournamentLabel">
                                Escudo:
                                <input class="fileTeamCreated" value="<%= locals.oldData ? locals.oldData.name:null %>" name="file" type="file">
                                <% if (locals.errors && locals.errors.name) { %>
                                    <p class="errForm"><%= locals.errors.name.msg %></p>
                                <% } %>
                            </label>
                            <label class="newTournamentLabel">
                                Torneo:
                                <select id="selectTournament" name="tournamentId" class="tournamentIdTeamCreate">
                                    <% for( let i = 0; i < consultTournament.length; i++ ) { %>
                                        <option value="<%= consultTournament[i].id  %>"><%= consultTournament[i].name  %></option>
                                    <% } %>
                                </select>
                                <% if (locals.errors && locals.errors.name) { %>
                                    <p class="errForm"><%= locals.errors.name.msg %></p>
                                <% } %>
                            </label>
                            <label class="newTournamentLabel">
                                División:
                                <select name="divisionId" class="divisionIdTeamCreate divisionSelect">
                                    <% for( let i = 0; i < consultDivision.length; i++ ) { %>
                                        <option value="<%= consultDivision[i].id  %>"><%= consultDivision[i].name  %></option>
                                    <% } %>
                                </select>
                                <% if (locals.errors && locals.errors.name) { %>
                                    <p class="errForm"><%= locals.errors.name.msg %></p>
                                <% } %>
                            </label>
                            <input class="formSubmitTournament btnLink" value="Crear torneo" type="submit" />
                        </fieldset>
                    </form>
                </div>
                <div>
                    <div class="teamCardContCreate">
                        <div class="teamCardCreateAvatar templateCreateTeamAvatar">
                            <img src="/img/teams/default.png" alt="">
                        </div>
                        <div class="templateCreateTeamName">Nombre:</div>
                        <div class="templateCreateTeamCap">Capitan: Null</div>
                        <div class="templateCreateTeamTour">Torneo:</div>
                        <div class="templateCreateTeamDiv">División:</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="/js/mainAdmin.js"></script>