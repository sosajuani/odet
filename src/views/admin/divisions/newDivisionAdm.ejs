<%- include("../../partials/head.ejs",{title:"Admin - Divisiones"}) %>
    <section class="contenedorAdmin">    
        <%- include("../../partials/menuAdmin.ejs")  %> 
        <div class="contAdminPrin">
            <h3>Divisiones</h3>
            <div>
                <a class="btnLink" href="/admin/divisions">Volver</a>
            </div>
            <form class="newTournament" action="/admin/divisions/new" method="post">
                <fieldset>
                    <legend>Informaci√≥n del torneo</legend>
                    <label class="newTournamentLabel">
                        Nombre:
                        <input  placeholder="Ingrese un nombre" value="<%= locals.oldData ? locals.oldData.name:null %>" name="name" type="text">
                        <% if (locals.errors && locals.errors.name) { %>
                            <p class="errForm"><%= locals.errors.name.msg %></p>
                        <% } %>
                    </label>
                    <label class="newTournamentLabel">
                        Torneo:
                        <select name="tournament"> 
                            <option value="">Seleccionar torneo</option>
                            <% for( let i = 0; i < consultTournament.length; i++ ) { %>
                                <option <%= locals.oldData && locals.oldData.tournament == consultTournament[i].id ? "selected":null %> value="<%= consultTournament[i].tournaments.id %>"><%= consultTournament[i].tournaments.name %></option>
                            <% } %>
                        </select>
                        <% if (locals.errors && locals.errors.tournament) { %>
                            <p class="errForm"><%= locals.errors.tournament.msg %></p>
                        <% } %>
                    </label>
                    <input class="formSubmitTournament btnLink" value="Crear torneo" type="submit" />
                </fieldset>

            </form>
        </div>
    </section>
