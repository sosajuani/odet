<%- include("../partials/head.ejs",{title:"Iniciar sesion"}) %>
<%- include("../partials/menuHeader.ejs") %>
<section class="contPrin">
    <% if (locals.errors) { %>
        <% for( let iterador in errors ) { %>
            <div><%= errors[iterador].msg %> </div>
        <% } %>
    <% } %>
    <form class="loginCont" method="post" action="/login">
        <h3>Bienvenido</h3>
        <input placeholder="Ingresa tu usuario" value="<%= locals.oldData ? locals.oldData.user : null %>" name="user" type="text" required>
        <input placeholder="Ingresa tu contraseña" name="pass" type="password" required>
        <input type="submit" value="Ingresar">
        <p>¿No tenes cuenta?. <a href="/register">Crea una</a></p>
    </form>
</section>
<%- include("../partials/footer.ejs") %>