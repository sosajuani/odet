<form action="/tournament/filter" method="post">
    <div class="formFilterTournament">
        <label for="selectTournament">Seleccionar torneo</label>
        <select name="tournamentId" id="selectTournament">
            <% for( let i=0;i<tournamentConsult.length;i++ ) { %>
                <option <%= tournamentConsult[i].id == tournamentId ? "selected" : null  %> value="<%= tournamentConsult[i].id %>"><%= tournamentConsult[i].name %></option>
            <% } %>
        </select><br>
    </div>
    <div class="formFilterTournament">
        <label for="divsionTournament">Divisi√≥n</label>
        <select name="divisionId" class="divisionSelect" id="divsionTournament">
            <% for( let i=0;i<divisionConsult.length;i++ ) { %>
                <option <%= divisionEmpty === false && divisionConsult[i].id === statisticsConsult[0].divisionId ? "selected" : null  %>  value="<%= divisionConsult[i].id %>"><%= divisionConsult[i].name %></option>
            <% } %>
        </select>
    </div>
    <input class="btnLink filterSubmit" type="submit" value="Filtrar">
</form>