<%- include("../../userViews/partials/head.ejs", {title: "Admin"}) %> 
    <section class="adminCont">
        <%- include("../partials/header.ejs") %>  
        <div class="contGralAdmin gralCont">
            <h4 class="titlePageAdm">Organización de fechas</h4>
            <div class="fixtureConfigCont">
                <%- include("partials/filter.ejs") %>
                <div class="dataActual">
                    <div>
                        Torneo actual: <%= tournamentId.name %> 
                    </div>
                    <div>
                        División acual: <%= divisionId.name %> 
                    </div>
                    <div>
                        Cantidad de equipos: <%= teamsConsult.length %>
                    </div>
                    <div>
                        Fechas: <%= teamsConsult.length-1 %>
                    </div>
                    <div>
                        Partidos: <%= (teamsConsult.length/2)*(teamsConsult.length-1) %>
                    </div>
                    <div>
                        Partidos por fecha: <%= (teamsConsult.length/2) %>
                    </div>
                    <div>
                        Partidos creados: <%= controlMatch.matchCreated %>
                    </div>
                </div>
                <form class="dateFilter" action="/tournament/filter" method="post">
                    <div>
                        <div class="">
                            <label for="date">Fechas</label>
                            <select name="date" id="date">
                                <% for( let i = 0; i < tournamentConsult.length; i++ ) { %>
                                    <option <%= tournamentConsult[i].id == tournamentId ? "selected" : null %>  value="<%= tournamentConsult[i].id %>"><%= tournamentConsult[i].name %></option>
                                <% } %>
                            </select>
                        </div>
                    </div>
                    <div>
                        <button class="btn btn--blue" type="submit">FILTRAR</button>
                    </div>
                </form>
                <!-- <div class="matchesCont">
                    <div class="matchCont">as
                        <div class="team"></div>
                        <div class="info">
                            <div>vs</div>
                            <div>15/5/22</div>
                        </div>
                        <div class="team"></div>
                    </div>
                </div>
            </div> -->
            <form action="/admin/fixture/byHand" method="post">

                <input type="hidden" name="matchLength" value="<%= teamsConsult.length-1 %>">
                <input class="btn btn--blue" type="submit" value="Confirmar fixture">
            </form>
    </section>
</body>
</html>